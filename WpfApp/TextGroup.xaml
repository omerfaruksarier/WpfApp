<Page x:Class="WpfApp.TextGroup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TextGroup">

    <Grid>
        <StackPanel VerticalAlignment="Top" Height="200" HorizontalAlignment="Center">
            <!--<Label Content="Burası text alanıdır" Margin="0 20 0 20"/>-->
            <TextBox Name="TextBox" Width="400" Height="35" Margin="0 40 0 20" />
            <Button Content="Text Button" Name="TextButton" Width="100" Height="35" Margin="0 20 0 20" Click="Random_Num"/>
            
        </StackPanel>
    </Grid>
</Page>
